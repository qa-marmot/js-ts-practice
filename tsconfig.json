{
  "compilerOptions": {
    // 1. 変数宣言(const/let)を保持し、モダンなJSを出力する
    "target": "es2020",

    // 2. ブラウザで解釈可能な形式(exportsを使わない)にする
    "module": "esnext",
    "moduleResolution": "node",

    // 3. ブラウザの機能（document や window）をTSが認識できるようにする
    "lib": ["es2020", "dom"],
    "types": [],

    // 出力設定
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // チェック設定（現状の設定を維持）
    "strict": false,
    "strictNullChecks": false,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    // 推奨オプション
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false, // ここをfalseにするとimport/exportが扱いやすくなります
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
